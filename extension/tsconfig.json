{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "module": "ES2020",
      "moduleResolution": "Bundler",
      "outDir": "dist",
      "rootDir": "src",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "noEmitOnError": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }